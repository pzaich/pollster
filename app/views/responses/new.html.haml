=form_for(@response) do |f|
	- if @response.errors.any?
		%div.alert.alert-error
			%h2 #{ pluralize(@response.errors.count, "error")} prevented this poll from being saved!
			%ul
				- @response.errors.full_messages.each do |msg|
					%li #{msg}
	%p
		=f.label :ans
		=f.text_field :name
	%p
		=f.button btn_message, :class => "btn btn-success "